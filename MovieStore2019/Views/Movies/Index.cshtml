@model IEnumerable<MovieStore2019.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Genre.Name</td>
                <td>
                    <span>@Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null) | </span>
                    <span>@Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, null)</span>
                </td>
            </tr>
        }
    </tbody>
</table>
<input class="btn btn-primary" type="button" value="New Movie" onclick="location.href='@Url.Action("Create", "Movies")'" />
