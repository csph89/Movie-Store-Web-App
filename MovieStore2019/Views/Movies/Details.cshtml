@model MovieStore2019.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<ul>
    <li><b>Genre: </b>@Model.Genre.Name</li>
    <li><b>Release Date: </b>@Model.ReleaseDate</li>
    <li><b>Date Added: </b>@Model.DateAdded</li>
    <li><b>Numbers in Stock: </b>@Model.NumberInStock</li>
</ul>

