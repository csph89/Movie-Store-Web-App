@model MovieStore2019.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><b>Membership Type: </b>@Model.MembershipType.Name</li>
    @if (Model.BirthDate.HasValue)
    {
        <li><b>Birthdate: </b>@Model.BirthDate</li>
    }
</ul>

